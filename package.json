{
  "name": "nodejs-pro-hoidanit",
  "version": "1.0.0",
  "description": "Dự án Node.js MVC theo khóa học Hỏi Dân IT",
  "main": "dist/app.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "nodemon",
    "start:debug": "nodemon --inspect=9229 -e ts --exec node -r ts-node/register ./src/app.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "node_modules"
    ],
    "exec": "ts-node ./src/app.ts"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/ntanh23112005/NodeJS_Basic.git"
  },
  "keywords": [],
  "author": "THEANH",
  "license": "ISC",
  "dependencies": {
    "dotenv": "16.4.7",
    "ejs": "3.1.10",
    "express": "5.0.1"
  },
  "devDependencies": {
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.0",
    "@types/node": "22.10.7",
    "nodemon": "3.1.9",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  }
}